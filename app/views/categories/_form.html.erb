<%= render 'shared/errors', obj: @category %>
  <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
    <div class="form-group row" >
      <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
      <div class="col-10" >
        <%= f.text_field :name, class:"form-control shadow p-3 mb-3 bg-white rounded" %>
      </div>
    </div>
        
    <div class="form-group row  justify-content-center" >
        <%= f.submit "Add category", class:"btn btn-success btn-lg" %>
    </div>
<% end %>
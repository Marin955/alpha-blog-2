<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="form-group row" >
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10" >
            <%= f.text_field :title, class:"form-control shadow p-3 mb-3 bg-white rounded" %>
          </div>
        </div>

        <div class="form-group row" >
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10" >
            <%= f.text_field :description, rows: 10, class:"form-control shadow p-3 mb-3 bg-white rounded" %>
          </div>
        </div>

        <div class="form-group row  justify-content-center" >
            <%= f.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>